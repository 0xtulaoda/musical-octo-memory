{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "dom", "es5", "scripthost"],
    "paths": {
      /*定义别名*/ "@src/*": ["src/*"]
    }
  }
}
